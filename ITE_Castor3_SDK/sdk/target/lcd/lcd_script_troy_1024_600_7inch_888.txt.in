/* ************************************************* */
/*     IT9850, RGB Interface mode, Clock Setting     */
/* ************************************************* */
write(0x002A, 0x0022);

/* ************************************************* */
/*                    PLL3 ck3_n1                    */
/* ************************************************* */
write(0x00C0, 0x400C);
write(0x00C2, 0x0010);
write(0x00C4, 0x2333);
write(0x00C4, 0x3333);
write(0x00C4, 0x2333);

write(0x0028, 0xC000);
//LCD reset
write(0x002A, 0x3022);
wait(1); // 9850 unit: us
write(0x002A, 0x0022);
wait(1);

/* ************************************************* */
/*                  General Setting                  */
/* ************************************************* */
write(0x1100, 0x2000);
write(0x1102, 0x0A60);
write(0x1104, 0x8002);
write(0x1106, 0x0000);
write(0x1108, 0x0F00);
write(0x110C, 0x3400);
write(0x110E, 0x0258);
write(0x1110, 0x1000);
write(0x1112, 0x0000);
write(0x1114, 0x0000);

/* ************************************************* */
/*                  Test Color Mode                  */
/* ************************************************* */
write(0x1222, 0x0000);
write(0x1224, 0x00FF);
write(0x1220, 0x0002);

/* ************************************************* */
/*              Hardware Cursor Setting              */
/* ************************************************* */
write(0x1120, 0x0000);
write(0x1138, 0x2000);

/* ************************************************* */
/*                 Interface Setting                 */
/* ************************************************* */
write(0x1190, 0x0007);
write(0x1192, 0x0540);
write(0x1194, 0x027B);

/* ************************************************* */
/*                   Port setting                    */
/* ************************************************* */
//Output HSync
write(0x11A0, 0x1000);
write(0x11A2, 0x0000);
write(0x11A4, 0x2014);
write(0x11A6, 0x0000);
write(0x11A8, 0x1540);
write(0x11AA, 0x0000);
write(0x11AC, 0x2000);
write(0x11AE, 0x0000);
//Output VSync
write(0x11B0, 0x5540);
write(0x11B2, 0x0000);
write(0x11B4, 0x2540);
write(0x11B6, 0x0002);
write(0x11B8, 0x1540);
write(0x11BA, 0x027A);
write(0x11BC, 0x2540);
write(0x11BE, 0x0000);
//Output DE
write(0x11C0, 0x10A0);
write(0x11C2, 0x0017);
write(0x11C4, 0x24A0);
write(0x11C6, 0x026F);
write(0x11C8, 0x10A0);
write(0x11CA, 0x0017);
write(0x11CC, 0x24A0);
write(0x11CE, 0x026F);

/* ************************************************* */
/*               Pin driving setting                 */
/* ************************************************* */
write(0x8138, 0x2AAA);
write(0x813A, 0x0000);
write(0x813C, 0x0000);
write(0x813E, 0x8000);
write(0x8140, 0xAA92);

/* ************************************************* */
/*                 Pin Share setting                 */
/* ************************************************* */
write(0x8108, 0x4000);
write(0x810A, 0x5555);
write(0x810C, 0x5555);
write(0x810E, 0x1555);
write(0x8110, 0x0154);

/* ************************************************* */
/*               PWM: GPIO64 assign 1                */
/* ************************************************* */
write(0x8088, 0x0000);
write(0x8094, 0x0001);
write(0x8098, 0x0001);

write(0x1258, 0x0000);

/* ************************************************* */
/*                    Enable LCD                     */
/* ************************************************* */
write(0x111E, 0x0001);
wait(1);
write(0x111E, 0x0003);

